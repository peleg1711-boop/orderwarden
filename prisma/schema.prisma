generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id
  email          String           @unique
  stores         Store[]
  etsyConnection EtsyConnection?

  // LemonSqueezy subscription fields
  lemonSqueezyCustomerId  String?
  subscriptionId          String?
  subscriptionStatus      String?   // "active", "cancelled", "expired", "past_due"
  planType                String    @default("free")  // "free" or "pro"
  subscriptionEndsAt      DateTime?
  monthlyOrderCount       Int       @default(0)
  orderCountResetAt       DateTime?

  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

model EtsyConnection {
  id             String    @id @default(cuid())
  userId         String    @unique
  user           User      @relation(fields: [userId], references: [id])
  
  // Etsy identifiers
  etsyUserId     String
  etsyShopId     String
  shopName       String
  
  // OAuth tokens
  accessToken    String
  refreshToken   String
  tokenExpiresAt DateTime
  
  // PKCE state (temporary, for OAuth flow)
  codeVerifier   String?
  oauthState     String?
  
  // Sync tracking
  lastSyncAt     DateTime?
  syncEnabled    Boolean   @default(true)
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  @@index([userId])
  @@index([etsyShopId])
}

model Store {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  platform  String
  storeName String
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Order {
  id              String    @id @default(cuid())
  storeId         String?
  store           Store?    @relation(fields: [storeId], references: [id])
  orderId         String    @unique
  trackingNumber  String
  carrier         String?

  lastStatus      String?
  lastUpdateAt    DateTime?
  riskLevel       String?

  events          OrderEvent[]

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([orderId])
  @@index([trackingNumber])
  @@index([storeId])
}

model OrderEvent {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id])
  type      String
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([orderId])
  @@index([type])
  @@index([createdAt])
}

model MessageTemplate {
  id          String   @id @default(cuid())
  orderId     String
  status      String
  riskLevel   String
  message     String   @db.Text
  sentAt      DateTime @default(now())
  
  @@index([orderId])
}
